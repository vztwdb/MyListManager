<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.wolfcreations.mylistmanager"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ListItemListActivity"
            android:label="@string/title_listitem_list"
            android:parentActivityName=".ListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wolfcreations.mylistmanager.ListActivity"/>
        </activity>
        <activity
            android:name=".ListItemDetailActivity"
            android:label="@string/title_listitem_detail"
            android:parentActivityName=".ListItemListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wolfcreations.mylistmanager.ListItemListActivity"/>
        </activity>
    </application>

</manifest>
